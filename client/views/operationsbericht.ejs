                              <tr>
                                  <td style="padding-right:15px;"><label class="control-label">Name:</label></td>
                                  <td><input type="text" id="patientname" class="form-control" placeholder="Name"></td>
                              </tr>
                              <tr>
                                  <td style="padding-right:15px;"><label class="control-label">Vorname:</label></td>
                                  <td><input type="text" id="patientfirstname" class="form-control" placeholder="Vorname"></td>
                              </tr>
                              <tr>
