                </div>



                <div class="col-sm-6 col-md-4">
                  <div class="thumbnail">
                    <div class="caption">
                      <h3 style="text-align:center;">Operation</h3>
                    </div>
                    <label>Post-OP Diagnose</label>
                    <div style="padding-bottom:10px; width:100%;" class="input-group diagnose">
                      <textarea id="diagnose" class="form-control" rows="2" placeholder="Diagnose"></textarea>
                      <button type="button" id="diagnosebutton" class="btn btn-primary modal-toggle" data-toggle="modal" data-target="#diagnosetreeview" aria-hidden="true">Wählen</button>
                    </div>

                    <label>Therapie</label>
                    <div style="padding-bottom:10px; width:100%;" class="input-group diagnose">
                      <textarea id="ops" class="form-control" rows="2" placeholder="Operationen- und Prozedurenschlüssel"></textarea>
                      <button type="button" id="opsbutton" class="btn btn-primary modal-toggle" data-toggle="modal" data-target="#opstreeview" aria-hidden="true">Wählen</button>
                    </div>

                    <label class="control-label" for="date">Operationsdatum</label>
                    <div style="padding-bottom:10px;" class="input-group date">
                      <input id="datum" type="text" class="form-control"><span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
                    </div>
                    <label>Operationsdauer</label>
                    <div class="btn-group">

                      <button id="opdauer" type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                        <span id="opdauerspan" data-bind="label">5 Minuten</span>&nbsp;<span class="caret"></span>
                      </button>
                      <ul class="dropdown-menu" role="menu">
                        <li><a class="menu_item" href="#">5 Minuten</a></li>
                        <li><a class="menu_item" href="#">10 Minuten</a></li>
                        <li><a class="menu_item" href="#">15 Minuten</a></li>
                        <li><a class="menu_item" href="#">20 Minuten</a></li>
                        <li><a class="menu_item" href="#">25 Minuten</a></li>
                        <li><a class="menu_item" href="#">30 Minuten</a></li>
                      </ul>
                    </div>
                  </div>
                </div>

                <div class="col-sm-6 col-md-4">
                  <div class="thumbnail">
                    <div class="caption">
                      <h3 style="text-align:center;">Ausführendes Personal</h3>
                    </div>
                    
                    <div style="padding-bottom:10px;">
                      <label>Operateur</label><input id="operateur" type="text" class="form-control" placeholder="Name">
                    </div>
                    <div style="padding-bottom:10px;">
                      <label>Anästhesie</label><input id="anaesthesie" type="text" class="form-control" placeholder="Name">
                    </div>
                    <div style="padding-bottom:10px;">
                      <label>Instrum</label><input id="instrum" type="text" class="form-control" placeholder="Name">
                    </div>
                    <div style="padding-bottom:10px;">
                      <label>Springer</label><input id="springer" type="text" class="form-control" placeholder="Name">
                    </div>
                  </div>
                </div>

                
                <div class="page-break"></div>

              </div>

              <% if (typeof patient !== 'undefined') { %>
                    <script>
                      var patientData = <%- JSON.stringify(patient) %>;
                      console.log(patientData[0]);
                      $('#patientname').val(patientData[0].lastname);
                      $('#patientfirstname').val(patientData[0].firstname);
                      $('#patienthealth').val(patientData[0].healthinsurance);
                      $('#patientdoc').val(patientData[0].familydoctor);
                    </script>
                    <% } %>
