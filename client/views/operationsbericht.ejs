                                  <td><input type="text" id="patienthealth" class="form-control" placeholder="Krankenkasse"></td>
                              </tr>
                              <tr>
                                  <td style="padding-right:15px;"><label class="control-label">Hausarzt:</label></td>
                                  <td><input type="text" id="patientdoc" class="form-control" placeholder="Hausarzt"></td>
                              </tr>
